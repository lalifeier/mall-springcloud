<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lalifeier.mall.cloud.demo.cloud.xxl.job.account.infrastructure.persistence.mybatis.mapper.AccountUserMapper">

    <select id="findByUsername" parameterType="java.lang.String"
            resultType="com.github.lalifeier.mall.cloud.demo.cloud.xxl.job.account.infrastructure.persistence.mybatis.po.AccountUserPO">
        SELECT *
        FROM account_user
        WHERE username = #{username}
    </select>

</mapper>
